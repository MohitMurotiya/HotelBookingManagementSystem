	@Autowired
	private UserService service;
	
	@GetMapping("/users")
	public List<User> findAll(){
		System.out.println("Inside findAll() method of UserController");
		return service.findAll();
	}
	
	@GetMapping("/users/{role}")
	public List<User> findByRole(@PathVariable String role){
		System.out.println("Inside findByRole() method of UserController");
		return service.findByRole(role);
	}
	
}

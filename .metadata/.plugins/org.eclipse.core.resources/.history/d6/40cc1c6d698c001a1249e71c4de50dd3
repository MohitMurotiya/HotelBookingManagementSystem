/**
 * 
 */
package com.cg.util;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RestController;

import com.cg.dao.UserRepository;
import com.cg.model.User;
import com.cg.service.UserService;

/**
 * @author User
 *
 */
@RestController
public class UserController {
	
	@Autowired
	private UserService service;
	
	@GetMapping("/users")
	public List<User> findAll(){
		System.out.println("Inside findAll() method of UserController");
		return service.findAll();
	}
	
	@GetMapping("/users/{role}")
	public List<User> findByRole(@PathVariable String role){
		System.out.println("Inside findByRole() method of UserController");
		return service.findByRole(role);
	}
	
	@GetMapping("/user/username/{user}/and/password/{pass}")
	public User findByUserName(@PathVariable String user, @PathVariable String pass) {
		System.out.println("Inside findByUserName() method of UserController");
		User u = service.findByUsername(user);
		if(u.getPassword().equals(pass)) {
			return u;
		} else
			return null;
	}
	
	@PostMapping("/user/add")
	public void createUser(@RequestBody User user) {
		System.out.println("Inside createUser() method of UserController");
		service.createUser(user);
	}
	
	@DeleteMapping("/user/{username}")
	public void deleteUser(@PathVariable String username) {
		System.out.println("Inside deleteUser() method of UserController");
		service.deleteUser(username);
	}
	
	@PutMapping("/user/{username}")
	public void updateUser(User user) {
		System.out.println("Inside updateProduct() method of UserController");
		service.updateUser(user);
	}
	
}

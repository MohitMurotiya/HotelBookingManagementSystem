package com.cg.model;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;

import com.fasterxml.jackson.annotation.JsonFormat;
import com.fasterxml.jackson.annotation.JsonFormat.Shape;

@Entity
public class Booking {

	@Id
	@GeneratedValue(strategy = GenerationType.IDENTITY)
	@Column(name = "bookingId")
	private Long bookingId;

	private Hotel hotel;
	private Room room;
	private RegistrationModel customer;

	@JsonFormat(pattern = "yyyy-MM-dd", shape = Shape.STRING)
	@Column(name = "checkin")
	private String checkin;

	@JsonFormat(pattern = "yyyy-MM-dd", shape = Shape.STRING)
	@Column(name = "chechout")
	private String chechout;

	@Column(name = "Guests")
	private int numOfGuests;

	@Column(name = "Amount")
	private double finalPrice;

	public Booking() {
		// TODO Auto-generated constructor stub
	}

	/**
	 * @param bookingId
	 * @param hotel
	 * @param room
	 * @param customer
	 * @param checkin
	 * @param chechout
	 * @param numOfGuests
	 * @param finalPrice
	 */
	public Booking(Long bookingId, Hotel hotel, Room room, RegistrationModel customer, String checkin, String chechout,
			int numOfGuests, double finalPrice) {
		super();
		this.bookingId = bookingId;
		this.hotel = hotel;
		this.room = room;
		this.customer = customer;
		this.checkin = checkin;
		this.chechout = chechout;
		this.numOfGuests = numOfGuests;
		this.finalPrice = finalPrice;
	}

	public Long getBookingId() {
		return bookingId;
	}

	public void setBookingId(Long bookingId) {
		this.bookingId = bookingId;
	}

	public Hotel getHotel() {
		return hotel;
	}

	public void setHotel(Hotel hotel) {
		this.hotel = hotel;
	}

	public Room getRoom() {
		return room;
	}

	public void setRoom(Room room) {
		this.room = room;
	}

	public RegistrationModel getCustomer() {
		return customer;
	}

	public void setCustomer(RegistrationModel customer) {
		this.customer = customer;
	}

	public String getCheckin() {
		return checkin;
	}

	public void setCheckin(String checkin) {
		this.checkin = checkin;
	}

	public String getChechout() {
		return chechout;
	}

	public void setChechout(String chechout) {
		this.chechout = chechout;
	}

	public int getNumOfGuests() {
		return numOfGuests;
	}

	public void setNumOfGuests(int numOfGuests) {
		this.numOfGuests = numOfGuests;
	}

	public double getFinalPrice() {
		return finalPrice;
	}

	public void setFinalPrice(double finalPrice) {
		this.finalPrice = finalPrice;
	}

}

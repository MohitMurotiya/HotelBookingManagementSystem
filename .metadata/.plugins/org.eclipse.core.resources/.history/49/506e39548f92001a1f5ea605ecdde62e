package com.cg.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;

import com.cg.dao.BookingRepository;
import com.cg.model.Booking;

public class BookingServiceImpl implements BookingSerivce {
	
	@Autowired
	private BookingRepository repos;

	@Override
	public List<Booking> findAll() {
		return repos.findAll();
	}

	@Override
	public void createHotel(Booking book) {
		repos.save(book);
	}

	@Override
	public void updateHotel(Booking book) {
		repos.deleteById(book.getBookingId());
		repos.save(book);
	}

}
